{
  "openapi": "3.0.0",
  "info": {
    "title": "Payment System API",
    "version": "1.0.0"
  },
  "paths": {
    "/auth/register": {
      "post": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "mobile": {
                    "type": "string",
                    "pattern": "^\\+91[6-9]\\d{9}$"
                  }
                },
                "required": ["mobile"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OTP sent",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}